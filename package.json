{
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon ./server/app.js",
    "client": "cd client && npm start",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build"
  }
}